﻿@{
    ViewData["Title"] = "Mansion Numbers";
}
@model IEnumerable<MagicMansion_Web.Models.Dto.MansionNumberDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Mansion Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="MansionNumber" asp-action="CreateMansionNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New Number</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Mansion Name
                </th>
                <th>
                    Mansion Number
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Mansion.Name</td>
                    <td>@item.MansionNo</td>
                    <td>
                        <a asp-controller="MansionNumber" asp-action="UpdateMansionNumber" asp-route-mansionNo="@item.MansionNo" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="MansionNumber" asp-action="DeleteMansionNumber" asp-route-mansionNo="@item.MansionNo" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>