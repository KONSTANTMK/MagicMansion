@model IEnumerable<MagicMansion_Web.Models.Dto.MansionDTO>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Mansion List</h1>
        </div>
        <div class="col text-end pt-1">
            <a class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create New Mansion</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Ocupany
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@(item.Rate).ToString("c")</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>